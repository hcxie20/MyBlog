<%- include("partials/header") %>


<div class="container main">
    <h1 class="text-center">Welcome to J's blog</h1>

    <% blogs.forEach(function(blog){ %> 
        <% if (blog!==undefined) {%> 
            <div class="container blog">
                <h2 class="ml-3">
                    <%= blog.title%>
                    <small class="text-muted float-right"><%=blog.created.getMonth()%> / <%=blog.created.getDate()%>, <%=blog.created.getFullYear()%></small>
                </h2>
                <div class="container">
                    <% if (blog.body.length > 700){%> 
                        <p class="mb-0"><%-blog.body.substring(0, 700)%>...</p>
                    <% }else { %> 
                        <p class="mb-0"><%-blog.body%></p>
                    <% }%>
                </div>
                <div class="row justify-content-end">
                    <div class="float-right m-3">
                        <a class="btn btn-primary" href="/blogs/<%=blog._id%>">See more</a>
                    </div>
                </div>
            </div>
        <% } %> 
    <% }) %> 
</div>


<%- include("partials/footer") %>